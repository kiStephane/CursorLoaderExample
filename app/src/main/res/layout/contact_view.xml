<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/contactIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@android:drawable/ic_dialog_email"
        android:background="@android:color/holo_blue_bright" />

    <TextView
        android:id="@+id/contactNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/contactIv"
        android:layout_alignTop="@id/contactIv"
        android:layout_marginStart="10dp"
        android:text="Contact" />

    <TextView
        android:id="@+id/contactNumberTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/contactNameTv"
        android:layout_alignStart="@id/contactNameTv"
        android:text="contact number" />

</RelativeLayout>